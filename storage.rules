rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Reviews media - authenticated users can upload, everyone can read
    match /reviews/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // User profile images - users can manage their own images
    match /users/{userId}/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chat media - authenticated users can upload, everyone can read
    match /chat/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Test files for functionality testing
    match /test/{allPaths=**} {
      allow read, write: if request.auth != null; // Allow authenticated users to test
    }
    
    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}