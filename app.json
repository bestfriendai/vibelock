{
  "expo": {
    "name": "Locker Room Talk",
    "slug": "locker-room-talk",
    "scheme": "locker-room-talk",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "icon": "./assets/app-icon.png",
    "splash": {
      "image": "./assets/logo-circular.png",
      "resizeMode": "contain",
      "backgroundColor": "#0B0B0F"
    },
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/app-icon.png"
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "icon": "./assets/app-icon.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/app-icon.png",
        "backgroundColor": "#0B0B0F"
      }
    },
    "plugins": [
      "expo-asset",
      "expo-build-properties",
      "expo-font",
      "expo-mail-composer",
      "expo-secure-store",
      "expo-sqlite",
      "expo-video",
      "expo-web-browser"
    ]
  }
}
