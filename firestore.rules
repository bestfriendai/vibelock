rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users: public read, users can write their own profile
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Reviews are publicly readable; authenticated users can create and update
    match /reviews/{reviewId} {
      allow read: if true; // Public read access
      allow create: if request.auth != null && request.auth.uid != null;
      // Allow general updates by authenticated users to align with app behavior
      // NOTE: tighten in production by tracking authorId and restricting updates
      allow update: if request.auth != null && request.auth.uid != null;
      allow delete: if false; // No deletion allowed

      // Comments within reviews
      match /comments/{commentId} {
        allow read: if true; // Public read access to comments
        allow create: if request.auth != null; // Authenticated users can create comments
        // Allow like/dislike and updatedAt updates
        allow update: if request.auth != null 
          && request.writeFields.size() <= 3
          && ('likeCount' in request.writeFields || 'dislikeCount' in request.writeFields);
        // Deletion allowed for authenticated users (consider restricting to authorId in future)
        allow delete: if request.auth != null;
      }
    }

    // Chat rooms are publicly readable
    match /chatRooms/{roomId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can modify

      // Messages within chat rooms
      match /messages/{messageId} {
        allow read: if true; // Public read access to messages
        allow create: if request.auth != null 
          && request.auth.uid != null
          && request.auth.uid == request.resource.data.senderId; // Users can only create messages as themselves
        allow update, delete: if false; // No updates or deletions allowed
      }
    }

    // Test collection for Firebase testing (remove in production)
    match /test/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
