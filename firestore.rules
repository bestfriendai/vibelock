rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reviews are publicly readable but only authenticated users can create
    match /reviews/{reviewId} {
      allow read: if true; // Public read access
      allow create: if request.auth != null 
        && request.auth.uid != null
        && resource == null; // Only allow creation, not updates to existing docs
      allow update: if request.auth != null 
        && request.auth.uid != null
        && (request.writeFields.size() == 1 && 'likeCount' in request.writeFields); // Only allow likeCount updates
      allow delete: if false; // No deletion allowed
      
      // Comments within reviews
      match /comments/{commentId} {
        allow read: if true; // Public read access to comments
        allow create: if request.auth != null; // Authenticated users can create comments
        allow update: if request.auth != null 
          && (request.writeFields.size() <= 2 && ('likeCount' in request.writeFields || 'dislikeCount' in request.writeFields)); // Only allow like/dislike updates
        allow delete: if request.auth != null; // Authenticated users can delete comments
      }
    }
    
    // Chat rooms are publicly readable
    match /chatRooms/{roomId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can modify
      
      // Messages within chat rooms
      match /messages/{messageId} {
        allow read: if true; // Public read access to messages
        allow create: if request.auth != null 
          && request.auth.uid != null
          && request.auth.uid == resource.data.senderId; // Users can only create messages as themselves
        allow update, delete: if false; // No updates or deletions allowed
      }
    }
    
    // Test collection for Firebase testing (remove in production)
    match /test/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}